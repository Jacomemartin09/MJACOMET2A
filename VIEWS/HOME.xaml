<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calificacion_Uisrael.VIEWS.HOME"
             Title="HOME"
             BackgroundColor="LightSkyBlue" 
             >

    <ScrollView>
    <VerticalStackLayout
        Spacing="25"
        
        >
       
            <Label x:Name="UsuarioLabel"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand"
               TextColor="Black"
               TextDecorations="Underline"    />
            <Label 
            Text="BIENVENIDO AL REGISTRO DE CALIFICACIONES"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            TextColor="Black"
            />
        
        <Picker
            x:Name="pkEstudiantes"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Title="Selecciona un Estudiante"
            TitleColor="Black"
            
            TextColor="Black"
            FontAttributes="Bold"
           
            >
            <Picker.Items>
                
               
                    <x:String>MATEO PADILLA</x:String>
                    <x:String>VICTOR PADILLA</x:String>
                    <x:String>CARLOS ROSAS</x:String>
                    <x:String>SEBASTIAN CUMBA</x:String>
                    <x:String>MARTIN JACOME</x:String>
               
            </Picker.Items>
        </Picker>
       
        <Label 
            Text="RECORDAR QUE SI LA NOTA TIENE DECIMALES SE DIGITA CON LA ',' NO CON EL '.'"
             VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="Black"
           />
       
        

        <Label 
                Text="SI EL ESTUDIANTE TIENE 0 EN UN ALGUNA NOTA COLOCAR DIRECTAMENTE '0.1'"
                VerticalOptions="Center" 
                HorizontalOptions="Center" 
            TextColor="Black"
/>
            
            
        <Entry
            x:Name="TxtSeguimiento1"
            Placeholder="Ingrese la Nota del Seguimiento 1"
            PlaceholderColor="Black"
            Keyboard="Numeric"
            TextColor="Black"

           />

        <Entry
            x:Name="TxtExamen1"
            Placeholder="Ingrese la Nota del Examen 1"
            Keyboard="Numeric"
            PlaceholderColor="Black"
            TextColor="Black"

               />
        <Entry
            x:Name="TxtSeguimiento2"
             Placeholder="Ingrese la Nota del Seguimiento 2"
            Keyboard="Numeric"
            PlaceholderColor="Black"
            TextColor="Black"

       />
        <Entry
             x:Name="TxtExamen2"
             Placeholder="Ingrese la Nota del Examen 2"
            Keyboard="Numeric"
            PlaceholderColor="Black"
            TextColor="Black"

       />
        <DatePicker 
            x:Name="Fecha"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            TextColor="Black"

            />
        <Button 
            x:Name="BtnEjecutar"
            Clicked="BtnEjecutar_Clicked"
            Text="Calcular"
            TextColor="White"
BackgroundColor="Blue"
            />




    </VerticalStackLayout>
    </ScrollView>
</ContentPage>